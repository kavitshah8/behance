<div class="panel panel-primary">
	<div class="panel-heading">
		<div class="panel-title">
			<h4>{{content.name}}</h4>			
		</div>
		<small>
			{{#each item in content.fields}}
				{{item}}
			{{/each}}
		</small>		
	</div>
	<div class="panel-body">
		<div class="col-md-6">
			<img class="img-responsive" {{bind-attr src="content.covers.404"}} >
		</div>

		<div class="col-md-4 col-md-offset-2">
			<p class="text-uppercase">Project By</p>
			{{#each item in content.owners}}
				<div><strong>{{item.first_name}} {{item.last_name}}</strong></div>
			{{/each}}
		</div>	
	</div>
</div>

{{outlet}}